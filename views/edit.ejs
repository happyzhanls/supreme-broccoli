<% include partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">
        Editing -- <%= blog.title %>
    </div>
    <form action="/blogs/<%= blog._id %>?_method=put" method="post">
        <div class="ui form">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" value=<%= blog.title %> required></input>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" value=<%= blog.image %> required></input>
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea name="blog[body]"><%= blog.body %></textarea>
            </div>
            <div class="field">
                <input type="submit" class="ui inverted brown big button"></input>
            </div>
        </div>
    </form>
</div>

<% include partials/footer %>